@model BibliotekaWeb.Models.PozycjaViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edycja</h1>

<h4>Pozycja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PozycjaId" />
            <input type="hidden" asp-for="Uzytkownik" />
            <div class="form-group">
                <label asp-for="Tytul" class="control-label">Tytuł</label>
                <input asp-for="Tytul" class="form-control" />
                <span asp-validation-for="Tytul" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rok" class="control-label"></label>
                <input asp-for="Rok" class="form-control" />
                <span asp-validation-for="Rok" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rodzaj" class="control-label"></label>
                <select asp-for="Rodzaj" class="form-control">
                    <option value="0">Książka</option>
                    <option value="1">DVD</option>
                    <option value="2">CD</option>
                    <option value="3">Vinyl</option>
                </select>
            </div>
            <div>
                <input asp-for="Foto" class="form-control-file" id="foto" style="display:none" />
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input type="file" class="form-control-file" onchange="previewFiles()" />
                <span asp-validation-for="Foto" class="text-danger"></span>
                <div id="preview" style="width: 100px">
                    <img src=@Html.DisplayFor(model => model.Foto) class="card-img-top" alt=@Html.DisplayFor(model => model.Tytul)>
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Powrót do Pozycji</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

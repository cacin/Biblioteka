@model BibliotekaWeb.Models.PozycjaViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>@Html.DisplayFor(model => model.Tytul)</h1>


<div class="card" style="width: 18rem;">
    <img src=@Html.DisplayFor(model => model.Foto) class="card-img-top" alt=@Html.DisplayFor(model => model.Tytul)>
    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(model => model.Tytul)</h5>
        <!-- <p class="card-text">@Html.DisplayFor(model => model.Tytul)</p>-->
    </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><span>Autor: </span>@Html.DisplayFor(model => model.Autor)</li>
            <li class="list-group-item"><span>Rok wydania: </span>@Html.DisplayFor(model => model.Rok)</li>
            <li class="list-group-item"><span>Nośnik: </span>@Html.DisplayFor(model => model.Rodzaj)</li>
            <li class="list-group-item"><span>Wypożyczona: </span>@Html.DisplayFor(model => model.Status)</li>
        </ul>
        <div class="card-body">
            <a asp-action="Edit" asp-route-id="@Model.PozycjaId" class="btn btn-primary">Edycja</a>
            <a asp-action="Index">Powrót do Pozycji</a>
        </div>
    </div>

